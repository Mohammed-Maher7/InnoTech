<div class="card" style="width: 18rem;">
    <img src="@ImageUrl" class="card-img-top" alt="Card image">
    <div class="card-body">
        <h5 class="card-title">@Title</h5>
        <p class="card-text">@Text</p>
        @ChildContent
    </div>
</div>

@code {
    [Parameter] public string ImageUrl { get; set; } = "https://via.placeholder.com/150";
    [Parameter] public string Title { get; set; } = "Card Title";
    [Parameter] public string Text { get; set; } = "Some quick example text.";
    [Parameter] public RenderFragment? ChildContent { get; set; }
}
